---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Contact - Get in Touch',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section with Blue Gradient Title -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <div class="mb-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-blue-400 dark:from-blue-400 dark:to-blue-300">
        Get in Touch
      </h1>
      <p class="text-xl text-muted dark:text-slate-400 mt-4">
        Have questions about KOHO or the referral bonus? We're here to help!
      </p>
    </div>
  </section>

  <!-- FAQ Card -->
  <section class="px-4 pb-8 sm:px-6 mx-auto lg:px-8 max-w-4xl">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-8 text-center border border-gray-200 dark:border-slate-700">
      <div class="w-16 h-16 bg-primary rounded-lg flex items-center justify-center mx-auto mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold mb-3 dark:text-white">Have Questions?</h2>
      <p class="text-muted dark:text-slate-400 mb-6">
        Find answers to common questions about the KOHO referral bonus
      </p>
      <a
        href="/#faqs"
        class="inline-block px-6 py-3 text-white bg-primary hover:bg-primary-dark rounded-lg font-semibold transition-colors"
      >
        View FAQ
      </a>
    </div>
  </section>

  <!-- Official Support Section -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 max-w-4xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 dark:text-white">Need Official KOHO Support?</h2>
      <p class="text-lg text-muted dark:text-slate-400 max-w-3xl mx-auto">
        For account-specific issues, technical problems, or official KOHO support, please contact KOHO directly through their official channels.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 text-center border border-gray-200 dark:border-slate-700">
        <h3 class="text-xl font-semibold mb-4 dark:text-white">Visit KOHO Support</h3>
        <a
          href="https://help.koho.ca/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 text-white bg-primary hover:bg-primary-dark rounded-lg font-semibold transition-colors"
        >
          KOHO Support
        </a>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow-lg p-6 text-center border border-gray-200 dark:border-slate-700">
        <h3 class="text-xl font-semibold mb-4 dark:text-white">KOHO Help Center</h3>
        <a
          href="https://www.koho.ca/contact/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 text-white bg-primary hover:bg-primary-dark rounded-lg font-semibold transition-colors"
        >
          Help Center
        </a>
      </div>
    </div>

    <p class="text-center text-sm text-muted dark:text-slate-400 italic">
      This website is not affiliated with KOHO Financial Inc. For official support, always use KOHO's official contact methods.
    </p>
  </section>
</Layout>
